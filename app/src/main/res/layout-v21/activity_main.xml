<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView" 
        android:layout_below="@id/textView"
        android:layout_marginTop="31dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/spotify_streamer_button_text"
                android:layout_centerHorizontal="true"
                android:id="@+id/spotify_streamer_button" />

            <Button
                style="@android:style/TextAppearance.Material.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/scores_button_text"
                android:layout_centerHorizontal="true"
                android:id="@+id/scores_button"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/spotify_streamer_button"
                android:layout_alignStart="@+id/spotify_streamer_button" />

            <Button
                style="@android:style/TextAppearance.Material.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/library_button_text"
                android:layout_centerHorizontal="true"
                android:id="@+id/library_button"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/scores_button"
                android:layout_alignStart="@+id/scores_button" />

            <Button
                style="@android:style/TextAppearance.Material.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/build_it_bigger_button_text"
                android:layout_centerHorizontal="true"
                android:id="@+id/build_it_bigger_button"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/library_button"
                android:layout_alignStart="@+id/library_button" />

            <Button
                style="@android:style/TextAppearance.Material.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/xyz_reader_button_text"
                android:layout_centerHorizontal="true"
                android:id="@+id/xyz_reader_button"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/build_it_bigger_button"
                android:layout_alignStart="@+id/build_it_bigger_button" />

            <Button
                style="@android:style/TextAppearance.Material.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/capstone_button_text"
                android:layout_centerHorizontal="true"
                android:id="@+id/capstone_button"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/xyz_reader_button"
                android:layout_alignStart="@+id/xyz_reader_button" />
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
